// Texto en display oled SSD1306 128x32
// Ajustable fuente, posiciÃ³n y tiempo.

// Arduino NANO clonico -> ATmega328p Old Bootloader

// Arduino NANO  -  OLED SSD1306

//    PIN A4     -  SDA
//    PIN A5     -  SCK
//    PIN 5V     -  VCC
//    PIN GND    -  GND

// @lectronic579

#include <Arduino.h>
#include <U8g2lib.h>
#include <SPI.h>
#include <Wire.h>

U8G2_SSD1306_128X32_UNIVISION_F_HW_I2C u8g2(U8G2_R0); 

 void setup(void) {
   u8g2.begin();
}

  void loop(void) {
   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso18_tr);
   u8g2.drawStr(0,29,"lectronic579");
   u8g2.sendBuffer();
   delay(4000);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(8,29," SIGUEME");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(10,29,"   EN");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(4,29,"INSTAGRAM");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(8,29,"  PARA");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(10,29,"  MAS");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(4,29,"PROYECTOS");
   u8g2.sendBuffer();
   delay(800);

   u8g2.clearBuffer();
   u8g2.setFont(u8g2_font_logisoso20_tr);
   u8g2.drawStr(8,29,">> @ <<");
   u8g2.sendBuffer();
   delay(3000);

}
